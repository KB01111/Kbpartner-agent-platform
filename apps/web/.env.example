# The base API URL for the platform.
# Defaults to `http://localhost:3000/api` for development
NEXT_PUBLIC_BASE_API_URL="http://localhost:3000/api"

# LangSmith API key required for some admin tasks.
LANGSMITH_API_KEY="lsv2_..."
# Whether or not to always use LangSmith auth (API key). If true, you will
# not get user scoped auth by default
NEXT_PUBLIC_USE_LANGSMITH_AUTH="false"

# The deployments to make available in the UI.
# This should be a JSON string array of deployment objects.
# Example: [{"name":"Default","isDefault":true,"defaultGraphId":"default","url":"http://localhost:8000/api/v1"}]
NEXT_PUBLIC_DEPLOYMENTS='[{"name":"Default","isDefault":true,"defaultGraphId":"default","url":"http://localhost:8000/api/v1"}]'

# The RAG API URL for the platform.
NEXT_PUBLIC_RAG_API_URL="http://localhost:8080"

# The base URL to the MCP server. Do not include the `/mcp` at the end.
NEXT_PUBLIC_MCP_SERVER_URL=""
# Whether or not the MCP server requires authentication.
# If true, all requests to the MCP server will go through a proxy
# route first.
NEXT_PUBLIC_MCP_AUTH_REQUIRED="true"

# Supabase Authentication
# Your Supabase project URL.
NEXT_PUBLIC_SUPABASE_URL="your_supabase_url"
# Your Supabase project anonymous key.
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"

# Disable showing Google Auth in the UI
# Defaults to false.
# NEXT_PUBLIC_GOOGLE_AUTH_DISABLED=false

# Enable demo mode banner
NEXT_PUBLIC_DEMO_APP="false"

# Optional MCP server token for testing. JSON string with an access_token field
# Example: MCP_TOKENS='{"access_token":"abc123"}'
MCP_TOKENS=""

# DragonflyDB / Redis Configuration (DragonflyDB is Redis compatible)
# Hostname of the DragonflyDB/Redis server.
# 'dragonflydb' is the service name defined in docker-compose.yml.
DRAGONFLYDB_HOST=dragonflydb
# Port for the DragonflyDB/Redis server.
DRAGONFLYDB_PORT=6379
# Password for the DragonflyDB/Redis server (if configured).
# DRAGONFLYDB_PASSWORD=your_dragonflydb_password
